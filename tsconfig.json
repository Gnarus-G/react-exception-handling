{
    "compilerOptions": {
        "target": "es5",
        "lib": [ "dom", "es6" ],
        "esModuleInterop": true,
        "module": "commonjs",
        "jsx": "react",
        "outDir": "lib",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@component/*": ["src/component/*"],
            "@hook/*": ["src/hook/*"]
        }
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src",
        "test"
    ]
}