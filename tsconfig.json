{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "es6"
        ],
        "esModuleInterop": true,
        "moduleResolution": "node",
        "module": "esnext",
        "jsx": "preserve",
        "outDir": "lib",
        "declaration": true,
        "declarationDir": "lib/types",
        "sourceMap": true,
        "declarationMap": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ]
}